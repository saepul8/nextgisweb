<div data-dojo-type="${baseClass}"
    data-dojo-attach-point="focusNode">

    <div data-dojo-type="dijit/layout/BorderContainer"
        data-dojo-props="gutters: false"
        style="width: 100%; height: 300px">

    <div data-dojo-attach-point="wFile"
        data-dojo-type="ngw-file-upload/ImageUploader"
        data-dojo-props="
                region: 'center',
                uploaderHelpText: '{{gettext 'We recommend height of 45 px and width of up to 200 px.'}}'
    "></div>


        <div data-dojo-type="dijit/layout/ContentPane"
            data-dojo-props="region: 'bottom'"
            style="padding: 1em 0;">
            <button data-dojo-type="dijit/form/Button" 
                data-dojo-attach-point="buttonSave"
                class="dijitButton--primary">{{gettext 'Save'}}</button>
            <button data-dojo-type="dijit/form/Button" 
                data-dojo-attach-point="buttonRestore"
                class="dijitButton--primary">{{gettext 'Restore default'}}</button>
        </div>

    </div> 

</div>
